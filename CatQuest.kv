<Sprite>:
    size: 50, 50
    canvas:
        Color:
            rgba: [1, 0, 0, 1]
    
        Ellipse:
            size: self.size[0], self.size[1]
            pos: self.pos
    
<CatQuest>:    
    canvas:
        Rectangle:
            pos: self.center_x - 5, 0
            size: 10, self.height
            
    Label:
        font_size: 70  
        center_x: root.width / 4
        top: root.top - 50
        text: "0"
        
    Label:
        font_size: 70  
        center_x: root.width * 3 / 4
        top: root.top - 50
        text: "0"
    Sprite:
        center: self.parent.center
